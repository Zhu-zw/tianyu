/* pages/details/details.wxss */

page {
  background-color: #f4f4f4;
  height: 100%;
}
.content{
  height: 100%;
  width: 100%;
}

.con-window{
  background-color: #ededed;
  height: 30%;
}
.con-image{
  width: 100%;
  height: 100%;
}
.price{
  color: red;
  font-size: 1.5rem;
  margin-left: 5%;
}
.explain{
  width: 90%;
  height: 8%;
  margin-left: 5%;
  font-size: 0.8rem;
  margin-top: 20rpx;
}
.ex-v1{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #00a0ea;
  color: white;
  float: left;
}
.ex-v2{
  width:70%;
  float: left;
  margin-left: 20rpx;
}
.information{
  margin-left: 5%;
}
.guarantee{
  width: 90%;
  height: 150rpx;
  margin-left: 5%;
}
.gua-v1{
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #00a0ea;
  font-size: 0.9rem;
  color: white;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  float: left;
}
.gua-v2{
  color: #00a0ea;
  border:#00a0ea solid 2rpx;
  width: 30%;
  height: 58rpx;
  line-height: 56rpx;
  float: left;
  text-align: center;
  margin-left: 30rpx;
  border-radius: 10rpx;
  font-size: 0.5rem;
}
.inf-v1{
  float: left;
}
.inf-width{
  width: 90%;
  height: 60rpx;
}
.mode{
  float: left;
  width: 20%;
  height: 50rpx;
  line-height: 50rpx;
  border:#00a0ea solid 2rpx;
  margin-left: 20rpx;
  text-align: center;
  font-size: 25rpx;
}
.pickup{
  width:90%;
  margin-top:40rpx;
  height: 60rpx;
  margin-left: 5%;
}
.service{
  width:90%;
  margin-top:30rpx;
  height: 80rpx;
  margin-left: 5%;
  border-bottom: #cbcaca solid 2rpx;
}
.car-model{
  width:90%;
  margin-top:20rpx;
  margin-left: 5%;
}
.store{
  float: left;
  margin-left: 10%;
}
.replace{
  float: right;
  margin-right: 5%;
  color: #939191;
}
.product{
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
}
.foot{
  width: 100%;
  height: 8%;
}
.foot-back{
  width: 20%;
  height: 100%;
  float: left;
  margin-left: 10%;
}
.foot-img{
  width: 60%;
  height: 50%;
  margin-left: 15%;
}
.foot-img image{
  margin-top: 10rpx;
  width: 100%;
  height: 100%;
}
.foot-font1{
  text-align: center;
  font-size: 30rpx;
  margin-top:10rpx;
  color: #636161;
}
.foot-font2{
  text-align: center;
  color: white;
  font-size: 0.8rem;
  margin-top: 3%;
}
.foot-left{
  height: 100%;
  width: 60%;
  float: left;
  color: white;
}
.foot-right{
  height: 100%;
  width: 40%;
  background-color:#00a0ea;
  float: left;
}